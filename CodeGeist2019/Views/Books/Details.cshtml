@model CodeGeist2019.Models.Book

@{
    ViewBag.Title = "Details";
}

<div>
    <div class="clearfix">
        <div class="float-left">
            <h2>@Html.DisplayFor(model => model.Title)</h2>
        </div>

        <div class="float-right">
            <h2>@Html.DisplayFor(model => model.Price)$</h2>
        </div>
    </div>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h5><strong>Preview</strong></h5>
                <object data="\Books\@Html.DisplayFor(model => model.File.FilePath)" type="application/pdf"
                        width="100%" height="550"></object>
            </div>

            <div class="col-4">
                <h5><strong>Extra Info.</strong></h5>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Rating)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Rating)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AgeLimit)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AgeLimit)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Category)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Views)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Views)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
